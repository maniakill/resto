<?xml version='1.0' encoding='utf-8'?>
<widget
    id="eu.salesassist.restopass"
    version="0.4"
    versionCode = "0.4"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    xmlns:android   = "http://schemas.android.com/apk/res/android"
    >
    <name>RestoPass</name>
    <preference name="target-device" value="tablet" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="both" />
    <preference name='phonegap-version' value='cli-5.2.0' />
    <preference name="Fullscreen" value="true" />
    <preference name="EnableViewportScale" value="false"/>

    <icon src="icon.png" />
    <icon src="res2/screen/ios/icons/57.png" gap:platform="ios" width="57" height="57" />
    <icon src="res2/screen/ios/icons/72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res2/screen/ios/icons/120.png" gap:platform="ios" width="120" height="120" />
    <icon src="res2/screen/ios/icons/152.png" gap:platform="ios" width="152" height="152" />
    <icon src="res2/screen/ios/icons/76.png" gap:platform="ios" width="76" height="76" />

    <gap:splash src="splash.png" />
    <gap:splash src="res2/screen/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res2/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res2/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res2/screen/ios/screen-ipad-landscape.png" gap:platform="ios" width="1024" height="748" />
    <!-- <gap:splash src="res2/screen/ios/screen-ipad-portrait.png" gap:platform="ios" width="768" height="1024" /> -->

    <!-- retina iPad support: PhoneGap 2.5.0+ only -->
    <gap:splash src="res2/screen/ios/screen-ipad-landscape-2x.png" gap:platform="ios" width="2048" height="1536" />
    <gap:splash src="res2/screen/ios/screen-ipad-portrait-2x.png" gap:platform="ios" width="1536" height="2048" />

    <gap:splash src="res2/screen/android/android-ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res2/screen/android/android-mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res2/screen/android/android-hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res2/screen/android/android-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res2/screen/android/android-xhdpi.png" gap:platform="android" gap:density="xxhdpi" />

    <gap:config-file platform="ios" parent="CFBundleVersion">
        <string>4</string>
    </gap:config-file>
    <gap:platform name="ios" />
    <description>
        SalesAssist Contract RestoPass
    </description>
    <author email="marius@medeeaweb.com" href="http://salesassist.eu">
        ArkWeb Team
    </author>

    <gap:plugin name="cordova-plugin-camera" source="npm" />
    <gap:plugin name="cordova-plugin-media-capture" source="npm" />
    <gap:plugin name="cordova-plugin-media" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm"  />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-dialogs" source="npm"  />

    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
</widget>